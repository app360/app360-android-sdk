<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mwork="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_mwork_payment_bg">

    <ProgressBar
        android:id="@+id/com_mwork_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <vn.mog.app360.sdk.payment.ui.widget.MworkButton
        android:id="@+id/com_mwork_btn_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/com_mwork_retry"
        mwork:typeface="Roboto-Light.ttf"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:id="@+id/com_mwork_layout_top"
            android:background="@android:color/white">

            <ImageView
                android:layout_height="32dp"
                android:layout_width="32dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:src="@drawable/com_mwork_ic_back"
                android:id="@+id/com_mwork_app_icon"/>

            <vn.mog.app360.sdk.payment.ui.widget.MworkTextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="@string/com_mwork_pay_via_sms"
                android:layout_centerInParent="true"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <ScrollView
            android:id="@+id/com_mwork_layout_sms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/com_mwork_logo"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/com_mwork_spn_card"
                    style="@style/DropDownNav.Mwork"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/com_mwork_bg_edit_text"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <LinearLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"></LinearLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <!-- <include
         android:id="@+id/com_mwork_logo"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         layout="@layout/com_mwork_payment_logo"
         android:visibility="visible"/>-->

</RelativeLayout>